<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Id"
        android:inputType="number"
        android:minWidth="150dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/txt0"
        app:layout_constraintLeft_toRightOf="@id/txt0"
        app:layout_constraintTop_toTopOf="@id/txt0" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt0" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="name"
        android:minWidth="150dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/txt1"
        app:layout_constraintLeft_toRightOf="@+id/txt1"
        app:layout_constraintTop_toTopOf="@+id/txt1" />


    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Class"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt1" />

    <EditText
        android:id="@+id/edtClass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="class"
        android:minWidth="150dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toRightOf="@+id/txt2"
        app:layout_constraintTop_toTopOf="@+id/txt2" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt2" />

    <Button
        android:id="@+id/btnComfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Comfirm"
        app:layout_constraintLeft_toRightOf="@id/btnCancel"
        app:layout_constraintTop_toBottomOf="@id/txt2" />
</androidx.constraintlayout.widget.ConstraintLayout>